bank-ig.lfmn.dgac.aviation {
    # Configuration TLS automatique
    tls {
        protocols tls1.2 tls1.3
    }
    
    # Headers de sécurité
    header {
        # Activer HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prévenir le clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prévenir le content sniffing
        X-Content-Type-Options "nosniff"
        # Protection XSS
        X-XSS-Protection "1; mode=block"
        # Politique de référent
        Referrer-Policy "same-origin"
        # CSP pour plus de sécurité (à ajuster selon vos besoins)
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'; frame-ancestors 'self';"
        # Supprimer l'en-tête Server
        -Server
    }
    
    # Encodage
    encode gzip zstd
    
    # Reverse proxy vers Vaultwarden
    reverse_proxy vaultwarden:80 {
        # WebSocket support pour les notifications en temps réel
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Logs d'accès
    log {
        output file /data/access.log
        format json
    }
}

# Redirection HTTP vers HTTPS
http://example.com {
    redir https://{host}{uri} permanent
}
